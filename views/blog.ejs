<% include _layouts/header %>

<!-- Blog -->
<div class="section news">
    <div class="container">
        <div class="row row-title">
            <div class="col s12">
                <div class="section-title">
                    <span class="theme-secondary-color lang" key="new_knowledge1">Knowledges</span>&nbsp;<span
                        class="lang" key="new_knowledge2">News</span>
                </div>
            </div>
        </div>
        <div class="row">
            <% posts.forEach( (post) =>{ %>
            <div class="col s12">
                <div class="news-content">
                    <div class="news-detail">
                        <h5 class="news-title"><a href=""><%= post.title %></a></h5>
                        <div class="date">
                            <span><i class="fa fa-calendar"></i> <%= post.date.toDateString() %></span>
                        </div>
                        <img src="<%= post.image %>" alt="Yay Kyi Yar - Images">
                        <h5 class="flow-text"><%- post.content.substring(0,150) %>...</h5>
                        <div class="readmore-news">
                            <a href="/blog/<%= post._id %>" class="readmore-btn">Read More</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
</div>
<!-- END Blog -->

<% include _layouts/footer %>